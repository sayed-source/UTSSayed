<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_c">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/background_c"
        >

        <TextView
            android:id="@id/igahmad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:gravity="center"
            android:text="Kitab Taurat"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="117dp"
            android:layout_below="@+id/igahmad"
            android:layout_marginTop="20dp"
            android:contentDescription="Taurat"
            android:src="@drawable/taurat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="324dp"
            android:layout_below="@id/imageView"
            android:layout_marginTop="-51dp"
            android:gravity="center"
            android:padding="40dp"
            android:text="@string/p_taurat"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>